generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String          @id @default(uuid())
  name           String?
  userName       String?
  email          String?         @unique
  emailVerified  DateTime?       @default(now())
  bio            String?
  image          String?
  hashedPassword String?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  accounts       Account[]
  posts          Post[]
  userComments   Comments[]
  notifications  Notifications[]
  followingIds   String[]
}

model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Post {
  id           String     @id @default(uuid())
  caption      String?
  postImage    String
  createdAt    DateTime   @default(now())
  postId       String
  user         User       @relation(references: [id], fields: [postId], onDelete: Cascade)
  postComments Comments[]
}

model Comments {
  id        String   @id @default(uuid())
  body      String
  createdAt DateTime @default(now())
  commentId String
  post      Post     @relation(references: [id], fields: [commentId], onDelete: Cascade)
  userId    String
  user      User     @relation(references: [id], fields: [userId], onDelete: Cascade)
}

model Notifications {
  id             String   @id @default(uuid())
  body           String
  createdAt      DateTime @default(now())
  markRead       Boolean? @default(false)
  notificationId String
  user           User     @relation(references: [id], fields: [notificationId], onDelete: Cascade)
}
